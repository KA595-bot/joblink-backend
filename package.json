{
	"description": "Plateforme de mise en relation sp√©cialistes/clients",
	"scripts": {
		"dev": "nodemon src/app.ts",
		"build": "tsc",
		"start": "node dist/app.js",
		"clean": "rm -rf dist",
		"db:generate": "prisma generate --schema ./src/prisma/schema.prisma",
		"db:push": "prisma db push --schema ./src/prisma/schema.prisma",
		"db:studio": "prisma studio --schema ./src/prisma/schema.prisma",
		"db:seed": "ts-node prisma/seed.ts",
		"db:migrate": "prisma migrate dev --schema ./src/prisma/schema.prisma",
		"db:migrate:deploy": "prisma migrate deploy --schema ./src/prisma/schema.prisma",
		"db:reset": "prisma migrate reset --schema ./src/prisma/schema.prisma",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write src/**/*.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"@prisma/client": "^6.16.3",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"cloudinary": "^2.7.0",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-validator": "^7.2.1",
		"inngest": "^3.44.0",
		"joi": "^18.0.1",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.6",
		"prisma": "^6.16.3",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/helmet": "^4.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/morgan": "^1.9.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.6.1",
		"@types/nodemailer": "^7.0.2",
		"@types/uuid": "^11.0.0",
		"@types/validator": "^13.15.3",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3"
	}
}
